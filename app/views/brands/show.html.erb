<% content_for :title, @brand.name %>

<div class="md:w-2/3 w-full" data-controller="gtm" data-action="turbo:load->gtm#viewItem" data-item-name="<%= @brand.name %>" data-item-id="<%= @brand.id %>" data-item-category="brand">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="w-full">
    <div id="<%= dom_id @brand %>">
      <!-- ブランド名ヘッダー -->
      <div class="pb-4 mb-4 border-b border-gray-200">
        <div class="flex flex-wrap items-center gap-2">
          <h1 class="text-2xl font-bold"><%= @brand.name %></h1>
          <span class="text-gray-500 text-sm"><%= @brand.kana %></span>
        </div>
      </div>

      <!-- 画像ギャラリーセクション -->
      <% if @brand.gallery_images.any? %>
        <div class="mb-6">
          <h2 class="font-bold text-lg mb-3 border-l-4 border-gray-500 pl-3">商品画像</h2>
          <div data-controller="image-gallery">
            <!-- メイン画像表示 -->
            <div class="mb-4 flex justify-center lg:justify-start">
              <img src="<%= @brand.primary_image %>"
                   alt="<%= @brand.name %> メイン画像"
                   class="w-32 h-32 rounded-lg shadow-md object-contain bg-white"
                   data-image-gallery-target="mainImage"
                   loading="lazy">
            </div>

            <!-- サムネイル画像（複数ある場合のみ表示） -->
            <% if @brand.gallery_images.length > 1 %>
              <div class="grid grid-cols-4 sm:grid-cols-6 md:grid-cols-8 gap-2">
                <% @brand.gallery_images.each_with_index do |image_url, index| %>
                  <button class="thumbnail-btn border-2 rounded-md overflow-hidden hover:border-blue-500 transition-colors <%= index == 0 ? 'border-blue-500' : 'border-gray-200' %>"
                          data-action="click->image-gallery#switchImage"
                          data-image-url="<%= image_url %>"
                          data-image-gallery-target="thumbnail">
                    <img src="<%= image_url %>"
                         alt="<%= @brand.name %> 画像 <%= index + 1 %>"
                         class="w-full h-16 object-contain bg-white"
                         loading="lazy">
                  </button>
                <% end %>
              </div>
            <% end %>

          </div>
        </div>
      <% end %>

      <!-- 詳細情報 -->
      <div class="mb-6">
        <!-- 基本情報テーブル -->
        <div class="mb-6">
          <table class="w-full">
            <tbody>
              <tr>
                <th class="py-3 pr-4 text-left text-gray-600 align-top">詳細</th>
                <td class="py-3"><%= @brand.detail %></td>
              </tr>
            </tbody>
          </table>
        </div>

        <!-- 酒蔵情報セクション -->
        <div class="mb-6">
          <h2 class="font-bold text-lg mb-3 border-l-4 border-gray-500 pl-3">酒蔵情報</h2>

          <% if @brand.company.present? %>
            <div class="pl-3">
              <table class="w-full">
                <tbody>
                  <tr class="border-b border-gray-100">
                    <th class="py-2 pr-4 text-left text-gray-600 w-1/4">名前</th>
                    <td class="py-2 font-medium"><%= @brand.company.name %></td>
                  </tr>

                  <% if @brand.company.address.present? %>
                  <tr class="border-b border-gray-100">
                    <th class="py-2 pr-4 text-left text-gray-600">住所</th>
                    <td class="py-2"><%= @brand.company.address&.full_address %></td>
                  </tr>
                  <% end %>

                  <% if @brand.company.tel.present? %>
                  <tr class="border-b border-gray-100">
                    <th class="py-2 pr-4 text-left text-gray-600">電話番号</th>
                    <td class="py-2"><%= @brand.company.tel %></td>
                  </tr>
                  <% end %>

                  <% if @brand.company.website.present? %>
                  <tr class="border-b border-gray-100">
                    <th class="py-2 pr-4 text-left text-gray-600">HP</th>
                    <td class="py-2">
                      <%= safe_website_link(@brand.company.website) %>
                    </td>
                  </tr>
                  <% end %>
                </tbody>
              </table>

              <div class="mt-4">
                <%= link_to '酒蔵の詳細を見る', @brand.company, class: "inline-block text-blue-600 hover:text-blue-800 font-medium", data: { action: "click->gtm#track", "gtm-event-value" => "view_company", "gtm-category-value" => "brand", "gtm-action-value" => "view_company", "gtm-label-value" => @brand.company.name } if @brand.company.present? %>
              </div>

              <div class="mt-6">
                <%= render 'shared/google_map', entity: @brand.company %>
              </div>
            </div>
          <% else %>
            <div class="text-gray-500">情報なし</div>
          <% end %>
        </div>

        <!-- ECサイト商品セクション -->
        <%= render 'shared/ec_listings', entity: @brand %>

        <!-- 受賞歴セクション -->
        <% if @brand.awards.present? || @brand.products.flat_map(&:awards).present? %>
          <div class="mb-6">
            <h2 class="font-bold text-lg mb-3 border-l-4 border-gray-500 pl-3">受賞歴</h2>
            <div class="pl-3">
              <table class="w-full">
                <thead>
                  <tr class="border-b border-gray-200">
                    <th class="py-2 pr-4 text-left text-gray-600">年度</th>
                    <th class="py-2 pr-4 text-left text-gray-600">コンテスト</th>
                    <th class="py-2 pr-4 text-left text-gray-600">賞</th>
                  </tr>
                </thead>
                <tbody>
                  <% (@brand.awards + @brand.products.flat_map(&:awards)).uniq.sort_by { |a| [a.contest_edition.year, a.rank] }.reverse.each do |award| %>
                    <tr class="border-b border-gray-100">
                      <td class="py-2"><%= award.contest_edition.year %>年</td>
                      <td class="py-2"><%= award.contest_edition.contest.name %></td>
                      <td class="py-2"><%= award.name %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        <% end %>

        <!-- コメントセクション -->
        <div class="mb-6" id="comments">
          <div class="flex items-center justify-between mb-3">
            <h2 class="font-bold text-lg border-l-4 border-gray-500 pl-3">
              コメント
              <span class="text-sm font-normal text-gray-500 ml-2">
                (<%= @brand.comments.count %>件)
              </span>
            </h2>
            <% if current_account %>
              <%= link_to new_brand_comment_path(@brand),
                    class: "inline-flex items-center px-3 py-1.5 bg-blue-600 text-white text-xs font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors" do %>
                <svg class="mr-1.5 h-3 w-3" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" fill="none" stroke="currentColor" stroke-miterlimit="10">
                  <line x1="7.23" y1="10.07" x2="16.77" y2="10.07"></line>
                  <line x1="12" y1="5.3" x2="12" y2="14.84"></line>
                  <path d="M18.68,1.48H5.32A3.82,3.82,0,0,0,1.5,5.3v9.54a3.82,3.82,0,0,0,3.82,3.82H9.14L12,21.52l2.86-2.86h3.82a3.82,3.82,0,0,0,3.82-3.82V5.3A3.82,3.82,0,0,0,18.68,1.48Z"></path>
                </svg>
                投稿
              <% end %>
            <% end %>
          </div>

          <!-- ログイン促進メッセージ（未ログインユーザーのみ） -->
          <% unless current_account %>
            <div class="mb-6 pl-3">
              <div class="bg-gray-50 rounded-lg p-4">
                <p class="text-gray-600 text-center mb-3">
                  コメントを投稿するにはログインが必要です
                </p>
                <div class="flex justify-center space-x-3">
                  <%= link_to "/login",
                        class: "inline-flex items-center px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors" do %>
                    ログイン
                  <% end %>
                  <%= link_to "/register",
                        class: "inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 text-sm font-medium rounded-md hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors" do %>
                    アカウント作成
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>

          <!-- 最新コメント表示（3件まで） -->
          <div class="pl-3">
            <% recent_comments = @brand.comments.includes(:account).recent.limit(3) %>
            <% if recent_comments.any? %>
              <div class="space-y-4 mb-4">
                <% recent_comments.each do |comment| %>
                  <%= render 'comments/comment', comment: comment, commentable: @brand %>
                <% end %>
              </div>

              <% if @brand.comments.count > 3 %>
                <div class="text-center">
                  <%= link_to brand_comments_path(@brand),
                        class: "inline-flex items-center px-4 py-2 text-sm font-medium text-blue-600 hover:text-blue-800 border border-blue-600 hover:border-blue-800 rounded-md transition-colors" do %>
                    <svg class="mr-2 h-4 w-4" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" fill="none" stroke="currentColor" stroke-miterlimit="10">
                      <path d="M1.5,5.3v9.54a3.82,3.82,0,0,0,3.82,3.82H7.23v2.86L13,18.66h5.73a3.82,3.82,0,0,0,3.82-3.82V5.3a3.82,3.82,0,0,0-3.82-3.82H5.32A3.82,3.82,0,0,0,1.5,5.3Z"></path>
                      <line x1="15.82" y1="10.07" x2="17.73" y2="10.07"></line>
                      <line x1="11.05" y1="10.07" x2="12.95" y2="10.07"></line>
                      <line x1="6.27" y1="10.07" x2="8.18" y2="10.07"></line>
                    </svg>
                    すべてのコメントを見る (<%= @brand.comments.count %>件)
                  <% end %>
                </div>
              <% end %>
            <% else %>
              <div class="text-center py-8">
                <div class="text-gray-400 mb-4">
                  <svg class="mx-auto h-8 w-8" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" stroke-width="1.5" fill="none" stroke="currentColor" stroke-miterlimit="10">
                    <path d="M1.5,5.3v9.54a3.82,3.82,0,0,0,3.82,3.82H7.23v2.86L13,18.66h5.73a3.82,3.82,0,0,0,3.82-3.82V5.3a3.82,3.82,0,0,0-3.82-3.82H5.32A3.82,3.82,0,0,0,1.5,5.3Z"></path>
                    <line x1="15.82" y1="10.07" x2="17.73" y2="10.07"></line>
                    <line x1="11.05" y1="10.07" x2="12.95" y2="10.07"></line>
                    <line x1="6.27" y1="10.07" x2="8.18" y2="10.07"></line>
                  </svg>
                </div>
                <p class="text-gray-600">まだコメントがありません</p>
                <% if current_account %>
                  <p class="text-sm text-gray-500 mt-1">最初のコメントを投稿してみませんか？</p>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

      </div>

    </div>
  </div>

  <!-- 同じ酒蔵の他の銘柄一覧 -->
  <% if @brand.company&.brands&.present? && @brand.company.brands.count > 1 %>
    <div class="mt-8">
      <h3 class="font-bold text-xl mb-4 border-l-4 border-gray-500 pl-3">同じ酒蔵の他の銘柄一覧</h3>
      <div class="space-y-3">
        <% @brand.company.brands.where.not(id: @brand.id).each do |brand| %>
          <%= link_to brand, class: "block w-full", data: { action: "click->gtm#track", "gtm-event-value" => "view_related_brand", "gtm-category-value" => "brand", "gtm-action-value" => "view_related_brand", "gtm-label-value" => brand.name } do %>
            <div class="w-full flex justify-between items-center p-4 border rounded-lg shadow-sm hover:bg-gray-50 transition-colors">
              <div class="flex-1">
                <div class="flex flex-wrap items-center gap-2">
                  <h3 class="text-lg font-medium text-gray-900"><%= brand.name %></h3>
                  <span class="text-sm text-gray-500"><%= brand.kana %></span>
                </div>
              </div>
              <div>
                <span class="text-blue-600 hover:text-blue-800 font-medium">詳細</span>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  <% end %>


  <%= link_to t('common.back'), request.referer.present? ? request.referer : brands_path, class: "w-full sm:w-auto text-center mt-6 mb-8 sm:ml-2 rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
</div>
