<div class="container mx-auto px-4 py-8">
  <h1 class="text-3xl font-bold mb-6"><%= t('brands.search.title') %></h1>

  <div class="mb-8">
    <%= render partial: 'shared/search_form', locals: { visible: '', query: @query } %>
  </div>

  <% if @brands.any? %>
    <div class="mb-4">
      <h2 class="text-xl font-semibold">
        <%= t('brands.search.results_title', query: @query) %>
        <span class="text-gray-500 text-sm ml-2">(<%= @pagy.count %>ä»¶)</span>
      </h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @brands.each do |brand| %>
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300">
          <div class="p-5">
            <h3 class="text-xl font-bold text-gray-800 mb-2"><%= brand.name %></h3>
            <p class="text-sm text-gray-600 mb-1"><%= brand.kana %></p>
            <div class="flex items-center mt-4 mb-3">
              <span class="text-sm font-medium text-gray-700"><%= Company.model_name.human %>:</span>
              <span class="text-sm text-blue-600 ml-2 hover:underline">
                <%= link_to brand.company.name, brand.company %>
              </span>
            </div>
            <%= link_to brand_path(brand), class: "inline-block w-full text-center py-2 px-4 bg-blue-500 text-white font-medium rounded hover:bg-blue-600 transition-colors duration-300" do %>
              <%= t('common.show') %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>

    <div class="mt-8">
      <%== pagy_nav_tailwind(@pagy) if @pagy.pages > 1 %>
    </div>
  <% elsif @query.present? %>
    <div class="bg-yellow-50 border-l-4 border-yellow-400 p-4 my-4">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-yellow-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd" />
          </svg>
        </div>
        <div class="ml-3">
          <p class="text-sm text-yellow-700">
            <%= t('brands.search.no_results') %>
          </p>
        </div>
      </div>
    </div>
  <% end %>
</div>
