<div class="flex flex-col sm:flex-row justify-between items-center pb-5 sm:pb-0">
  <div id="<%= dom_id brand %>" class="w-full sm:w-auto my-5 space-y-5">
    <div>
      <strong class="block font-medium mb-1">名前:</strong>
      <%= brand.name %>
    </div>
    <div>
      <strong class="block font-medium mb-1">フリガナ:</strong>
      <%= brand.kana %>
    </div>
    <div>
      <strong class="block font-medium mb-1">英語名:</strong>
      <%= brand.name_en %>
    </div>
    <div>
      <strong class="block font-medium mb-1">詳細:</strong>
      <%= brand.detail %>
    </div>
    <div>
      <strong class="block font-medium mb-1">酒蔵:</strong>
      <% if brand.company.present? %>
        <div class="ml-4 space-y-2">
          <div><strong>名前:</strong> <%= brand.company.name %></div>
          <% if brand.company.address.present? %>
            <div>
              <strong>住所:</strong>
              <%= brand.company.address&.full_address %>
            </div>
          <% end %>
          <% if brand.company.tel.present? %>
            <div><strong>電話番号:</strong> <%= brand.company.tel %></div>
          <% end %>
          <% if brand.company.website.present? %>
            <div><strong>ウェブサイト:</strong> <%= link_to brand.company.website, brand.company.website, target: "_blank" %></div>
          <% end %>
          <%= link_to '酒蔵の詳細を見る', brand.company, class: "text-blue-600 hover:underline" if defined?(company_path) %>
          <%= render 'shared/google_map', entity: brand.company %>
        </div>
      <% else %>
        <span class="text-gray-500">情報なし</span>
      <% end %>
    </div>
  </div>
  <div class="w-full sm:w-auto flex flex-col sm:flex-row space-x-2 space-y-2">
    <%= link_to '詳細', brand, class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <%= link_to '編集', edit_brand_path(brand), class: "w-full sm:w-auto text-center rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 inline-block font-medium" %>
    <div class="sm:inline-block">
      <%= button_to '削除', brand, method: :delete, class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: '本当に削除しますか？' } %>
    </div>
  </div>
</div>
