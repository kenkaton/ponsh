<div class="bg-white rounded-lg shadow-sm border border-gray-200 p-4 mb-4" data-testid="comment">
  <div class="flex items-start space-x-3">
    <!-- User Avatar -->
    <div class="flex-shrink-0">
      <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center text-white font-medium">
        <%= comment.account.display_name&.first || "?" %>
      </div>
    </div>
    
    <!-- Comment Content -->
    <div class="flex-1 min-w-0">
      <!-- Header -->
      <div class="flex items-center justify-between">
        <div class="flex items-center space-x-2">
          <h4 class="text-sm font-medium text-gray-900">
            <%= comment.account.display_name || "匿名ユーザー" %>
          </h4>
          <span class="text-xs text-gray-500">
            <%= time_ago_in_words(comment.created_at) %>前
          </span>
        </div>
        
        <!-- Actions for comment owner -->
        <% if current_account == comment.account %>
          <div class="flex items-center space-x-2">
            <%= button_to "削除", 
                  brand_comment_path(commentable, comment), 
                  method: :delete,
                  data: { 
                    confirm: "本当に削除しますか？",
                    turbo_method: :delete 
                  },
                  class: "text-xs text-red-600 hover:text-red-800",
                  form: { class: "inline" } %>
          </div>
        <% end %>
      </div>
      
      <!-- Comment Body -->
      <div class="mt-2">
        <p class="text-sm text-gray-700 whitespace-pre-wrap"><%= comment.body %></p>
      </div>
    </div>
  </div>
</div>