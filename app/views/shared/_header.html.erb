<header class="fixed w-full top-0 bg-slate-900 shadow-lg z-10 border-b border-slate-700" data-controller="toggle">
  <div class="container mx-auto flex justify-between items-center py-4 px-6">
    <div class="flex items-center">
      <a href="/" class="flex items-center space-x-2">
        <div class="w-8 h-8 bg-gradient-to-br from-blue-400 to-blue-600 rounded-full flex items-center justify-center">
          <span class="text-white text-sm font-bold">酒</span>
        </div>
        <span class="text-2xl font-bold text-white">ぽんしゅ</span>
      </a>
    </div>

    <!-- メインナビゲーション -->
    <nav class="hidden lg:flex items-center space-x-8">
      <a href="<%= brands_path %>" class="text-slate-300 hover:text-white transition-colors duration-200 font-medium flex items-center space-x-1">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
        </svg>
        <span>銘柄を探す</span>
      </a>
      <a href="#" class="text-slate-300 hover:text-white transition-colors duration-200 font-medium flex items-center space-x-1">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>
        <span>ランキング</span>
      </a>
    </nav>

    <!-- 検索バー（デスクトップ） -->
    <div class="hidden md:flex items-center flex-1 max-w-md mx-8">
      <%= form_with url: brands_path, method: :get, local: true, class: "w-full" do |form| %>
        <div class="relative">
          <%= form.text_field :query,
              placeholder: "銘柄・酒蔵名で検索...",
              value: params[:query],
              class: "w-full pl-10 pr-4 py-2 bg-slate-800 border border-slate-600 rounded-full text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200" %>
          <button type="submit" class="absolute left-3 top-1/2 transform -translate-y-1/2 text-slate-400 hover:text-white transition-colors">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </button>
        </div>
      <% end %>
    </div>

    <!-- 右側メニュー -->
    <div class="flex items-center space-x-4">
      <!-- モバイル検索ボタン -->
      <button class="md:hidden text-slate-300 hover:text-white transition-colors"
              title="検索"
              data-controller="toggle"
              data-action="click->toggle#toggle"
              data-target="mobile-search">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
        </svg>
      </button>

      <% if rodauth.logged_in? %>
        <!-- ログイン済みユーザー用ドロップダウン -->
        <div class="hidden lg:block relative" data-controller="toggle">
          <button class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-gradient-to-br from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 text-white shadow-lg transition duration-300 transform hover:scale-105 ring-2 ring-blue-400 ring-opacity-20"
                  data-action="click->toggle#toggle"
                  title="アカウントメニュー">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
            </svg>
          </button>

          <!-- ドロップダウンメニュー -->
          <div class="hidden absolute right-0 mt-3 w-56 bg-white rounded-xl shadow-xl py-2 z-50 border border-slate-200" data-toggle-target="element">
            <div class="px-4 py-3 border-b border-slate-100">
              <p class="text-sm text-slate-600">ログイン中</p>
              <p class="text-sm text-slate-900 font-semibold"><%= current_account.display_name %></p>
            </div>
            <div class="py-1">
              <% if rodauth.features.include?(:change_password) %>
                <%= link_to rodauth.account_path, class: "flex items-center px-4 py-3 text-sm text-slate-700 hover:bg-slate-50 transition-colors" do %>
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-3 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                  アカウント設定
                <% end %>
              <% end %>
              <%= link_to rodauth.logout_path, method: :post, class: "flex items-center px-4 py-3 text-sm text-red-600 hover:bg-red-50 transition-colors" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-3 text-red-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
                </svg>
                ログアウト
              <% end %>
            </div>
          </div>
        </div>
      <% else %>
        <!-- 未ログインユーザー用ボタン -->
        <div class="hidden lg:flex items-center space-x-3">
          <%= link_to rodauth.login_path, class: "px-4 py-2 text-sm font-medium text-slate-300 hover:text-white border border-slate-600 hover:border-slate-500 rounded-lg transition-all duration-200 hover:bg-slate-800" do %>
            ログイン
          <% end %>
          <%= link_to rodauth.create_account_path, class: "px-4 py-2 text-sm font-medium text-white bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 rounded-lg shadow-lg hover:shadow-xl transition-all duration-200 transform hover:scale-105" do %>
            新規登録
          <% end %>
        </div>
      <% end %>

      <!-- モバイルメニューボタン -->
      <button class="lg:hidden text-slate-300 hover:text-white focus:outline-none transition-colors" id="mobile-menu-button"
              data-controller="toggle"
              data-action="click->toggle#toggle"
              data-target="mobile-menu">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- モバイル検索バー (デフォルトでは非表示) -->
  <div class="md:hidden hidden bg-slate-800 border-t border-slate-700 px-4 py-4" id="mobile-search" data-toggle-target="element">
    <%= form_with url: brands_path, method: :get, local: true, class: "w-full" do |form| %>
      <div class="relative">
        <%= form.text_field :query,
            placeholder: "銘柄・酒蔵名で検索...",
            value: params[:query],
            class: "w-full pl-10 pr-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
        <button type="submit" class="absolute left-3 top-1/2 transform -translate-y-1/2 text-slate-400">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>
      </div>
    <% end %>
  </div>

  <!-- モバイルメニュー (デフォルトでは非表示) -->
  <div class="lg:hidden hidden bg-slate-800 border-t border-slate-700" id="mobile-menu" data-toggle-target="element">
    <!-- モバイル検索バー -->
    <div class="px-4 py-4 border-b border-slate-700">
      <%= form_with url: brands_path, method: :get, local: true, class: "w-full" do |form| %>
        <div class="relative">
          <%= form.text_field :query,
              placeholder: "銘柄・酒蔵名で検索...",
              value: params[:query],
              class: "w-full pl-10 pr-4 py-3 bg-slate-700 border border-slate-600 rounded-lg text-white placeholder-slate-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
          <button type="submit" class="absolute left-3 top-1/2 transform -translate-y-1/2 text-slate-400">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
          </button>
        </div>
      <% end %>
    </div>

    <!-- ナビゲーション -->
    <nav class="px-4 py-4">
      <div class="space-y-1">
        <a href="<%= brands_path %>" class="flex items-center px-3 py-3 text-slate-300 hover:text-white hover:bg-slate-700 rounded-lg transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
          </svg>
          <span class="font-medium">銘柄を探す</span>
        </a>
        <a href="#" class="flex items-center px-3 py-3 text-slate-300 hover:text-white hover:bg-slate-700 rounded-lg transition-colors">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
          </svg>
          <span class="font-medium">ランキング</span>
        </a>
      </div>

      <!-- アカウントメニュー -->
      <div class="border-t border-slate-700 mt-4 pt-4">
        <% if rodauth.logged_in? %>
          <!-- ログイン済みモバイルメニュー -->
          <div class="px-3 py-3 bg-slate-700 rounded-lg mb-3">
            <p class="text-xs text-slate-400 uppercase tracking-wide">ログイン中</p>
            <p class="text-sm text-white font-semibold mt-1"><%= current_account.display_name %></p>
          </div>
          <div class="space-y-1">
            <% if rodauth.features.include?(:change_password) %>
              <%= link_to rodauth.account_path, class: "flex items-center px-3 py-3 text-slate-300 hover:text-white hover:bg-slate-700 rounded-lg transition-colors" do %>
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span class="font-medium">アカウント設定</span>
              <% end %>
            <% end %>
            <%= link_to rodauth.logout_path, method: :post, class: "flex items-center px-3 py-3 text-red-400 hover:text-red-300 hover:bg-red-900/20 rounded-lg transition-colors" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1" />
              </svg>
              <span class="font-medium">ログアウト</span>
            <% end %>
          </div>
        <% else %>
          <!-- 未ログインモバイルメニュー -->
          <div class="space-y-3">
            <%= link_to rodauth.login_path, class: "flex items-center justify-center px-4 py-3 text-slate-300 border border-slate-600 hover:border-slate-500 rounded-lg transition-colors hover:bg-slate-700" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1" />
              </svg>
              <span class="font-medium">ログイン</span>
            <% end %>
            <%= link_to rodauth.create_account_path, class: "flex items-center justify-center px-4 py-3 text-white bg-gradient-to-r from-blue-500 to-blue-600 hover:from-blue-600 hover:to-blue-700 rounded-lg transition-all shadow-lg" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
              </svg>
              <span class="font-medium">新規登録</span>
            <% end %>
          </div>
        <% end %>
      </div>
    </nav>
  </div>
</header>
