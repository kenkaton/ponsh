<% content_for :title, t('companies.show.title') %>

<div class="md:w-2/3 w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl"><%= t('companies.show.title') %></h1>
    <div class="flex items-center space-x-2">
      <%= link_to t('common.edit'), edit_company_path(@company), class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 text-gray-900 font-medium" %>
      <%= link_to t('common.back'), companies_path, class: "rounded-md px-3.5 py-2.5 bg-gray-100 hover:bg-gray-50 text-gray-900 font-medium" %>
    </div>
  </div>

  <%= render @company %>

  <div class="sm:inline-block mt-2 sm:mt-0 sm:ml-2">
    <%= button_to t('common.destroy'), @company, method: :delete, class: "w-full rounded-md px-3.5 py-2.5 text-white bg-red-600 hover:bg-red-500 font-medium cursor-pointer", data: { turbo_confirm: t('common.confirmation') } %>
  </div>
</div>
